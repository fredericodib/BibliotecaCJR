<h1 class="title-page">Livros</h1>

<div class="form-group search-bar">
    <input type="select" class="form-control" id="book-search" onkeyup="booksFilter()" placeholder="Filtrar Livro...">
</div>

<div class="form-group search-bar">
  <select class="form-control" id="sellectCategory">
    <option value='0'>Filtrar por categoria</option>
    <% @categories.each do |category| %>
    	<option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
  </select>
</div>


<div class='clearfix' id="bookList">
	<%= render @books %>
</div>



